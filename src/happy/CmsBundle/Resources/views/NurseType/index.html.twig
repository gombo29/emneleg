{% extends '@happyCms/base.html.twig' %}
{% block pageheader %}Сувилагчийн үйлчилгээний төрлийн жагсаалт{% endblock %}

{% block style %}
    <style>
        ul li {
            display: inline-block;
        }
    </style>
{% endblock %}

{% block body %}
    {% include ':inc:flashmsg.html.twig' %}
    <ul style="list-style: none;padding: 0;">
        <li>
            <a class="btn btn-success" href="{{ path('cms_nurse_type_new') }}">Шинээр
                үүсгэх</a>
        </li>
    </ul>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Нэр</th>
            <th>Төлбөр</th>
            <th>Харагдах эсэх</th>
            <th>Үүсгэсэн огноо</th>
            <th>Өөрчилсөн огноо</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for k ,con in nursetype %}

            {% set k = k + 1 %}
            <tr>
                <td>{{ k }}</td>
                <td>{{ con.name }}</td>
                <td>{{ con.price }}</td>
                <td>{% if con.isShow == 1 %}<a href="{{ path('cms_nurse_type_update', { 'id': con.id }) }}" class="btn btn-success"><i class="glyphicon glyphicon-tick"></i>Тийм</a>{% else %}
                        <a href="{{ path('cms_nurse_type_update', { 'id': con.id }) }}" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> Үгүй</a>{% endif %}
                </td>
                <td>{{ con.createdDate|date('Y-m-d H:i:s') }}</td>
                <td>{{ con.updatedDate|date('Y-m-d H:i:s') }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-default" href="{{ path('cms_nurse_position_update', { 'id': con.id }) }}"
                               title="засах"><i class="glyphicon glyphicon-edit"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block js %}
{% endblock %}
