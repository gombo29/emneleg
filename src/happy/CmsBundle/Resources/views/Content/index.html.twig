{% extends '@happyCms/base.html.twig' %}


{% block pageheader %}Зөвлөгөө жагсаалт{% endblock %}
{% block body %}
    {% include ':inc:flashmsg.html.twig' %}
    <style>
        ul li {
            display: inline-block;
        }
    </style>
    <ul style="list-style: none;padding: 0;">
        <li>
            <a class="btn btn-success" href="{{ path('cms_content_new') }}">Шинээр
                үүсгэх</a>
        </li>
        <li>
            <a href="javascript:void(0)" id="searchlink">Хайлт &DownArrowUpArrow;</a>
        </li>
    </ul>

    <fieldset style="border:1px solid #ddd;{%if search%}display:block{%else%}display:none;{% endif %}" id="searchpad">
        {% include '@happyCms/inc/search.html.twig' with {'route' : 'cms_content_index'} %}
    </fieldset>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Зураг</th>
            <th>Нэр</th>
            <th>Төрөл</th>
            <th>Агуулга</th>
            <th>Үүсгэсэн огноо</th>
            <th>Өөрчилсөн огноо</th>
            <th style="width: 150px;"></th>
        </tr>
        </thead>
        <tbody>
        {% for con in content %}
            <tr>
                <td>{{ con.id }}</td>
                <td><img src="{{ localstatfolder }}{{ con.img }}" width="100"/></td>
                <td>{{ con.name }}</td>
                <td>{% if   con.contentType %}{{ con.contentType.name }} {% else %}{% endif %}</td>
                <td>{{ con.headline }}</td>
                <td>{{ con.createdDate|date('Y-m-d H:i:s') }}</td>
                <td>{{ con.updatedDate|date('Y-m-d H:i:s') }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-default"
                               href="{{ path('cms_content_show', { 'id': con.id}) }}" title="дэлгэрэнгүй"><i
                                        class="glyphicon glyphicon-folder-open"></i></a>
                        </li>
                        <li>
                            <a class="btn btn-default"
                               href="{{ path('cms_content_update', { 'id': con.id}) }}" title="засах"><i
                                        class="glyphicon glyphicon-edit"></i></a>
                        </li>
                        <li>
                            <a onclick="if(!confirm('Итгэлтэй байна уу!'))return false;" class="btn btn-danger"
                               href="{{ path('cms_content_delete', { 'id': con.id}) }}" title="устгах"><i
                                        class="glyphicon glyphicon-trash"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'happyCmsBundle:inc:page.html.twig' with {'route' : 'cms_content_index'} %}
{% endblock %}
{% block js %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#searchlink').click(function () {
                $('#searchpad').toggle();
            });
        });
    </script>
{% endblock %}
