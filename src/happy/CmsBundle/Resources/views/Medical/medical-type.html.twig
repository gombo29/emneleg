{% extends 'happyCmsBundle::base.html.twig' %}


{% block pageheader %}Эмнэлгийн төрөл жагсаалт{% endblock %}
{% block body %}
    {% include ':inc:flashmsg.html.twig' %}
    <style>
        ul li {
            display: inline-block;
        }
    </style>

    <ul style="list-style: none;padding: 0;">
        <li>
            <a class="btn btn-success" href="{{ path('cms_medical_type_new') }}">Эмнэлгийн төрөл нэмэх </a>
        </li>
    </ul>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Нэр</th>
            <th>Зураг /Mobile/</th>
            <th>Зураг /Web/</th>
            <th>Зураг /Active/</th>
            <th>Үүсгэсэн огноо</th>
            <th>Өөрчилсөн огноо</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for con in medType %}
            <tr>
                <td>{{ con.id }}</td>
                <td>{{ con.name }}</td>
                <td><img src="{{ localstatfolder }}{{ con.imgMobile }}" width="50"> </td>
                <td><img src="{{ localstatfolder }}{{ con.img }}" width="50"></td>
                <td><img src="{{ localstatfolder }}{{ con.imgActive }}" width="50"></td>
                <td>{{ con.createdDate|date('Y-m-d H:i:s') }}</td>
                <td>{{ con.updatedDate|date('Y-m-d H:i:s') }}</td>
                <td><a href="{{ path('cms_medical_type_update', {'id': con.id}) }}" class="btn btn-success">засах</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'happyCmsBundle:inc:page.html.twig' with {'route' : 'cms_medical_type_index'} %}
{% endblock %}

