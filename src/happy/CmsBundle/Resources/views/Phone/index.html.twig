{% extends '@happyCms/base.html.twig' %}
{% block pageheader %} Утасны дугаар {% endblock %}

{% block style %}
    <style>
        ul li {
            display: inline-block;
        }
    </style>
{% endblock %}

{% block body %}
    {% include ':inc:flashmsg.html.twig' %}
    <ul style="list-style: none;padding: 0;">
        <li>
            <a class="btn btn-success" href="{{ path('cms_phone_new') }}">Шинээр
                үүсгэх</a>
        </li>
    </ul>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Утасны дугаар</th>
            <th>Үүсгэсэн огноо</th>
            <th>Өөрчилсөн огноо</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for k ,con in pm %}

            {% set k = k + 1 %}
            <tr>
                <td>{{ k }}</td>
                <td>{{ con.phoneNumber }}</td>
                <td>{{ con.createdDate|date('Y-m-d H:i:s') }}</td>
                <td>{{ con.updatedDate|date('Y-m-d H:i:s') }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-default" href="{{ path('cms_phone_update', {'id': con.id}) }}"
                               title="засах"><i class="glyphicon glyphicon-edit"></i></a>

                            <a onclick="if(!confirm('Итгэлтэй байна уу!'))return false;" class="btn btn-danger" href="{{ path('cms_phone_delete', {'id': con.id}) }}"
                               title="засах"><i class="glyphicon glyphicon-trash"></i></a>

                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block js %}
{% endblock %}
