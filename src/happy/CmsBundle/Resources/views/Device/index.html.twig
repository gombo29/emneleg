{% extends 'happyCmsBundle::base.html.twig' %}


{% block pageheader %}Бүртгэлтэй төхөөрөмж жагсаалт{% endblock %}
{% block body %}
    {% include ':inc:flashmsg.html.twig' %}
    <style>
        ul li {
            display: inline-block;
        }
    </style>

    <ul style="list-style: none;padding: 0;">
        <li>
            <a class="btn btn-success" href="{{ path('cms_device_new') }}">Мэдэгдэл илгээх</a>
        </li>
    </ul>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Device Id</th>
            <th>Device Token</th>
            <th>Device name</th>
            <th>App type</th>
            <th>Үүсгэсэн огноо</th>
            <th>Өөрчилсөн огноо</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for con in device %}
            <tr>
                <td>{{ con.id }}</td>
                <td>{{ con.deviceId }}</td>
                <td>{{ con.deviceToken }}</td>
                <td>{{ con.deviceName }}</td>
                <td>{{ con.appType }}</td>
                <td>{{ con.createdDate|date('Y-m-d H:i:s') }}</td>
                <td>{{ con.updatedDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'happyCmsBundle:inc:page.html.twig' with {'route' : 'cms_device_index'} %}
{% endblock %}

