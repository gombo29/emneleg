{% extends '@happyCms/base.html.twig' %}
{% block pageheader %}Санал, гомдол жагсаалт{% endblock %}
{% block body %}
    {% include ':inc:flashmsg.html.twig' %}
    <style>
        ul li {
            display: inline-block;
        }
    </style>

    <ul style="list-style: none;padding: 0;">
        <li>
            <a href="javascript:void(0)" id="searchlink">Хайлт &DownArrowUpArrow;</a>
        </li>
    </ul>

    <fieldset style="border:1px solid #ddd;{%if search%}display:block{%else%}display:none;{% endif %}" id="searchpad">
    {% include '@happyCms/inc/search.html.twig' with {'route' : 'cms_nurse_feedback_index'} %}
    </fieldset>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Invoice Id</th>
            <th>Утасны дугаар</th>
            <th>Агуулга</th>
            <th>Үүсгэсэн огноо</th>
            <th>Өөрчилсөн огноо</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for con in feedback %}
            <tr>
                <td>{{ con.id }}</td>
                <td>
                    {{ con.phonenumber }}
                </td>
                <td>
                    {{ con.content }}
                </td>
                <td>{{ con.createdDate|date('Y-m-d H:i:s') }}</td>
                <td>{% if con.updatedDate %}{{ con.updatedDate|date('Y-m-d H:i:s') }}{% else %}-{% endif %}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include '@happyCms/inc/page.html.twig' with {'route' : 'cms_nurse_feedback_index'} %}
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#searchlink').click(function () {
                $('#searchpad').toggle();
            });
        });
    </script>
{% endblock %}

