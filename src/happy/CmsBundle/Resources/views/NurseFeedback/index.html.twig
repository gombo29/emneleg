{% extends '@happyCms/base.html.twig' %}
{% block pageheader %}Сувилагчийн гомдол жагсаалт{% endblock %}
{% block body %}
    {% include ':inc:flashmsg.html.twig' %}
    <style>
        ul li {
            display: inline-block;
        }
    </style>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Сувилагч Id</th>
            <th>Агуулга</th>
            <th>Үүсгэсэн огноо</th>
            <th>Өөрчилсөн огноо</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for k ,con in feedback %}

            {% set k = k + 1 %}
            <tr>
                <td>{{ k }}</td>
                <td>
                    {{ con.doctorId }}
                </td>
                <td>
                    {{ con.content }}
                </td>
                <td>{{ con.createdDate|date('Y-m-d H:i:s') }}</td>
                <td>{% if con.updatedDate %}{{ con.updatedDate|date('Y-m-d H:i:s') }}{% else %}-{% endif %}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include '@happyCms/inc/page.html.twig' with {'route' : 'cms_nurse_index'} %}
{% endblock %}

