<div class="hospital-box">

    <a href="{{ path('medical_detail', {'id': id}) }}" class="hospital-box-img"
       {#style="{% if detailpage is defined%}height: 150px;{% else %}height: 185px;{% endif %}background-image: url('{% if img %}/{{ localstatfolder }}{{ img }}{% else %}{{ asset('recource/images/blog1.jpg') }}{% endif %}');">#}
       style="background-image: url('{% if img %}{{ localstatfolder }}{{ img }}{% else %}{{ asset('recource/images/blog1.jpg') }}{% endif %}');">
    </a>

    <div class="hospital-box-txt">
        <h6 style="font-size: 18px;">{{ name }}</h6>
        {#<p style="{% if detailpage is defined%}height: 60px;{% else %}height: 94px;{% endif %}overflow: hidden;margin-bottom: 0;">#}
        <p style="height: 88px;overflow: hidden;margin-bottom: 0;">
            {#{% if detailpage is defined%}  {{ headline|slice(0, 60) }}{% else %}  {{ headline|slice(0, 160) }}{% endif %}...#}
            {{ headline|slice(0, 140) }}...
        </p>
        {% if isWifi == true %}
            <i class="fa fa-wifi" title="Wifi интернэттэй"></i>
        {% endif %}

        {% if isCard == true %}
            <i class="fa fa-cc-visa" title="Кредит картаар үйлчилнэ"></i>
        {% endif %}

        {% if isCar == true %}
            <i class="fa fa-car" title="Гаднаа зогсоолтой"></i>
        {% endif %}

        <p class="hospital-box-phone">Утас: {% set ph = phone|split(';') %}
            {% for p in ph %}{% if loop.first %} {{ p }}{% endif %}{% endfor %}</p>
        <a class="hospital-box-more" href="{{ path('medical_detail', {'id': id}) }}">Дэлгэрэнгүй</a>
    </div>
</div>