{% extends '@happyWeb/Layout/base.html.twig' %}
{% block style %}
    <link rel="stylesheet" href="{{ asset('recource/css/swiper.min.css') }}">
    <style>
        .nav-tabs .nav-link {
            color: #ffffff;
        }

        .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
            color: #ffffff;
            background-color: #ff7020;
            border-color: #ff7020 #ff7020 #ff7020 #ff7020;
        }

        .nav-tabs .nav-link:focus, .nav-tabs .nav-link:hover {
            color: #ffffff;
            border-color: #ff7020 #ff7020 #ff7020 #ff7020;
            background-color: #ff7020;
        }
    </style>
{% endblock %}
{% block ogtag %}
    <meta property="og:url" content="http://emneleg.mn/home"/>
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="Эмнэлэг.мн"/>
    <meta property="og:description"
          content="Бид та бүхэнд монгол улсад үйл ажиллагаа явуулж буй эмнэлгүүдийн хаяг байршил болон төлбөрийн мэдээллийг хүргэх болно. Мөн дуудлагын сувилагчийн үйлчилгээ болон эрүүл мэндийн зөвлөгөөг манай сайтаас авч байна. Биднийг сонгон үйлчлүүлсэн та бүхэнд баярлалаа."/>
    <meta property="og:image" content="http://emneleg.mn{{ asset('recource/share.png') }}"/>
{% endblock %}
{% block body %}

    <!-- Banner Slider -->

    <div id="carousel-example-1z" class="carousel slide carousel-fade top-slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="{{ asset('recource/banner.jpg') }}" class="slide-img">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">өмнөх</span>
        </a>
        <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">дараах</span>
        </a>
        <div class="container">
            <div class="banner-menu">
                <a href="{{ path('medicals') }}"><i class="fa fa-home"></i> Эмнэлгүүд</a>
                <a href="{{ path('advice') }}"><i class="fa fa-plus-square"></i> Зөвлөгөө</a>
                <a href="{{ path('web_nurse_index') }}"><i class="fa fa-stethoscope"></i> Сувилагч</a>
                <a href="javascript:void(0);"><i class="fa fa-heartbeat"></i> Цахим эмч</a>

            </div>
        </div>
    </div>

    <!-- Medical Centers -->

    <div class="medical-background">
        <div class="container">
            <div class="home-header">
                <h4><i class="fa fa-home"></i> Онцлох эмнэлгүүд</h4>
            </div>

            <div class="swiper-container swiper1">
                <div class="swiper-wrapper">
                    {% for m in medical[0:5] %}
                        <div class="swiper-slide">
                            {% include  '@happyWeb/inc/inc-medical.html.twig' with { 'isWifi': m.isWifi, 'isCard': m.isCard , 'isCar': m.isParking, 'headline': m.headline, 'img': m.photo, 'phone': m.phone, 'id': m.id, 'name' : m.name } %}
                        </div>
                    {% endfor %}

                </div>
            </div>

            <div class="swiper-container swiper2">
                <div class="swiper-wrapper">
                    {% for m in medical[6:10] %}
                        <div class="swiper-slide">
                            {% include  '@happyWeb/inc/inc-medical.html.twig' with {'isWifi': m.isWifi, 'isCard': m.isCard , 'isCar': m.isParking, 'headline': m.headline, 'img': m.photo, 'phone': m.phone, 'id': m.id, 'name' : m.name } %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


    <!-- Medical Search -->

    <div class="medical-search">
            {% include  '@happyWeb/inc/inc-medical-search.html.twig' %}
    </div>


    <!-- Nurse  -->

    <div class="medical-background">
        <div class="container">
            <img src="{{ asset('recource/img.jpg') }}" style="width: 100%;">
        </div>
    </div>


    <!-- Advice -->

    <div class="project-type-background" style="margin-bottom: 40px">
        <div class="container">
            <div class="home-header">
                <h4><i class="fa fa-plus-square"></i> Шинэ зөвлөгөө</h4>
            </div>
            <div class="swiper-container swiper3">
                <div class="swiper-wrapper">
                    {% for e in advice[0:2] %}
                        <div class="swiper-slide">
                            {% include '@happyWeb/inc/inc-advice.html.twig' with{'createdDate': e.createdDate, 'likecount': e.likeCount, 'img': e.img , 'title': e.name, 'headline': e.headline ,'id' : e.id} %}
                        </div>
                    {% endfor %}

                </div>
            </div>

            <div class="swiper-container swiper4">
                <div class="swiper-wrapper">
                    {% for e in advice[2:4] %}
                        <div class="swiper-slide">
                            {% include '@happyWeb/inc/inc-advice.html.twig' with{'createdDate': e.createdDate, 'likecount': e.likeCount, 'img': e.img , 'title': e.name, 'headline': e.headline ,'id' : e.id} %}
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>

    <script>

    </script>
{% endblock %}

{% block js %}
    <script src="{{ asset('recource/js/swiper.min.js') }}"></script>
    <script>
        medicalnum = 2;
        if ($(window).width() > 1072) {
            medicalnum = 2;
        } else if ($(window).width() <= 1072 && $(window).width() > 768) {
            medicalnum = 2;
        }
        else if ($(window).width() <= 768) {
            medicalnum = 1;
        }

        newsnum = 2;
        if ($(window).width() > 1072) {
            newsnum = 2;
        } else if ($(window).width() <= 1072 && $(window).width() > 768) {
            newsnum = 2;
        }
        else if ($(window).width() <= 768) {
            newsnum = 1;
        }

        var swiper1 = new Swiper('.swiper1', {
            pagination: '.swiper-pagination1',
            paginationClickable: true,
            spaceBetween: 30,
            slidesPerView: medicalnum,
            autoplay: 2500,
            autoplayDisableOnInteraction: false
        });
        var swiper2 = new Swiper('.swiper2', {
            pagination: '.swiper-pagination2',
            paginationClickable: true,
            spaceBetween: 30,
            slidesPerView: medicalnum,
            autoplay: 2500,
            autoplayDisableOnInteraction: false
        });

        var swiper3 = new Swiper('.swiper3', {
            pagination: '.swiper-pagination2',
            paginationClickable: true,
            spaceBetween: 30,
            slidesPerView: newsnum
        });
        var swiper4 = new Swiper('.swiper4', {
            pagination: '.swiper-pagination2',
            paginationClickable: true,
            spaceBetween: 30,
            slidesPerView: newsnum
        });
    </script>
{% endblock %}