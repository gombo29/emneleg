{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container col-lg-3 col-md-3 col-sm-8 col-xs-12 acc-margin">
        <div class="card">
            {#<a class="header-login" href="{{ path('happy_web_default_index') }}">#}
                {#<img src="{{ asset('recource/logo.png') }}" style="width:40%;display: inline-block;margin-top: 20px">#}
            {#</a>#}

            <div class="card-block">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="panel-heading" style="text-align: center;">
                        <h3 class="panel-title">Нэвтрэх хэсэг</h3>
                    </div>
                    <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                        <fieldset>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <div class="form-group">
                                <input class="form-control" placeholder="Нэвтрэх нэр" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus />
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Нууц үг" type="password" id="password" name="_password" required="required" />
                            </div>
                            <button class="btn btn-lg btn-success btn-block">Нэвтрэх</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}